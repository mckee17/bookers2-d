<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>Editing Book</h2>

      <%= render'layouts/errors', obj: @book %>

      <%= form_with model:@book, local:true do |f| %>

        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, autofocus: true %>
        </div>
        <div class="form-group">
          <label for="inputImage">Opinion</label>
          <%= f.text_field :body, autofocus: true %>
        </div>
        <div class="form-group" id="star_<%= @book.id %>"></div>

        <%= f.submit "Update Book",class:"btn btn-success"%>

      <% end %>

      <%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %>
    </div>
  </div>
</div>


<script>
  $("#star_<%= @book.id %>").raty({
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn: '<%= asset_path('star-on.png') %>',
    readOnly: true,
    score: <%= @book.rate %>
  });
</script>