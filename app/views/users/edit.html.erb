<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>

    <div class="errors_message">
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
      <% end %>
    </div>

    <%= form_with model:@user, local:true do |f| %>

      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="form-group">
        <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, autofocus: true %>
      </div>
      <div class="form-group">
        <label for="inputText">Introduction</label>
        <%= f.text_field :introduction, autofocus: true %>
      </div>
      <%= f.submit "Update User",class:"btn btn-secondary"%>

    <% end %>

    </div>
  </div>
</div>