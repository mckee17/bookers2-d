<div class="container px-5 px-sm-0 mt-3">
  <div class="row">

    <div class="col-md-3">

    <%= render 'users/info', userinfo: @userinfo %>

    <%= render 'books/new', booknew: @booknew %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Nmae</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user,:profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
              <td><%= user.name %></td>
              <td>フォロー数 <%= user.followers.count %></td>
              <td>フォロワー数 <%= user.followeds.count %></td>
              <td><% if user != current_user %>
                    <%= link_to user_relationships_path(user), method: :post, class:"btn btn-sm btn-primary" do %>
                      フォロー<% end %>
                  <% end %></td>
              <td><%= link_to user_relationship_path(user,user.followeds), method: :delete, class:"btn btn-sm btn-danger" do %>
                      フォロー<% end %></td>
              <td><%= link_to 'Show', user_path(user.id)%></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>

  </div>
</div>